pipeline{
    agent any
    
    
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'javahome2', url: 'https://github.com/anithaNani/myweb.git'
            }
        }
        stage("Maven Build"){
            steps{
                sh "mvn clean package"
            }
        }
        stage("deploy-dev"){
            steps{
                sshagent(['tomcat-new']) {
                sh """
                    scp -o StrictHostKeyChecking=no target/*.war  ubuntu@172.31.20.160:/home/ubuntu/apache-tomcat-9.0.72/webapps/
                    
                    ssh ubuntu@172.31.20.160 /home/ubuntu/apache-tomcat-9.0.72/bin/shutdown.sh
                    
                    ssh ubuntu@172.31.20.160 /home/ubuntu/apache-tomcat-9.0.72/bin/startup.sh
                
                """
            }
            
            }
        }
    }
}
